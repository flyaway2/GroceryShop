<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fraggally"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardBackgroundColor="#f1f2f6"
    android:layout_margin="5dp"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    <TextView
        android:id="@+id/codeProd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:visibility="gone" />
        <TextView
            android:id="@+id/Promotion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/QteRemise"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/PrixRemise"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/PrixUnit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/MarqueAr"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/Marque"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/NomAr"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/Nom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/TailleAr"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
        <TextView
            android:id="@+id/Taille"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
    <ImageView
        android:id="@+id/Img"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/groceries"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/NomDesc"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_column="1"
            android:text="Graisse Alimentaire"
            android:textColor="#3d3d3d"
            android:textSize="18sp"
            android:tooltipText="Grasse Alimentaire"
            />
        <TextView
            android:id="@+id/MarqueDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matina"
            android:textColor="#2C3A47"
            android:textSize="15sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/Prix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="300"
            android:textAlignment="center"

            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15sp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/SizeDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="300g"
            android:textSize="15sp"

            />
    </LinearLayout>

</LinearLayout>

















    <CheckBox
        android:id="@+id/check_prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        />
    </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/white_greyish"
            android:layout_margin="3dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:id="@+id/remove_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trash"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retirer"
                android:layout_marginLeft="10dp"
                android:textColor="#e67e22"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/QteContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginRight="10dp"

            >


            <ImageButton
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f1f2f6"
                android:src="@drawable/remove_circle"
                />

            <TextView
                android:id="@+id/Qte"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="1119"
                android:background="@drawable/shape_qte"
                android:layout_gravity="center"

                />
            <ImageButton
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus_circle"
                android:background="#f1f2f6"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/Total"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="200.00"
                    android:textSize="15sp"

                    android:textColor="#FD7272" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>